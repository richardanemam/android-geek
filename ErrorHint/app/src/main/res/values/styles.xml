<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/roxo_800080</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableStart">@drawable/icons8_error_32</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@color/roxo_800080</item>
        <item name="errorTextAppearance">@color/roxo_800080</item>
        <item name="android:textColor">@color/roxo_800080</item>
        <item name="colorControlNormal">@color/cinza_505050</item>
        <item name="colorControlActivated">@color/cinza_505050</item>
        <item name="colorControlHighlight">@android:color/holo_green_light</item>
    </style>

</resources>
